@model Common
@{
    ViewData["Title"] = "Recipe creator";
}
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <link href="~/lib/jqueryui/themes/smoothness/jquery-ui.css" rel="stylesheet" />
}


<div class="container">
    <form method="post">
        <div class="form-group">
            @Html.EditorFor(model => model.Food_name, new { htmlAttributes = new { @class = "form-control", @id = "SearchInputIngredient", @placeholder = "Search..." } })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-dark"><i class="fas fa-search fa-1x"></i> Search</button>
        </div>
    </form>
</div>