@model ContactMessageDTO
@{
    ViewData["Title"] = "Contact";
}
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


<!--<button class="btn btn-dark" id="contactUsButton">Contact Us!</button>-->
<div id="contactUsForm" class="row d-flex justify-content-center p-2 mt-3 mb-3">
    <div id="contactForm" class="card card-body text-light col-12 col-md-9 col-lg-6">
        <form method="post" class="col-12">
            <div asp-validation-summary="ModelOnly"></div>
            <!-- Thanks to below way of using TagHelpers on label we set focus to
            input after clicking on input label - very good for mobile/touchscreens -->
            <div class="form-group">
                <label asp-for="Name">Your name:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email:</label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject">Subject:</label>
                <input asp-for="Subject" type="text" class="form-control" />
                <span asp-validation-for="Subject" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message">Message:</label>
                <textarea asp-for="Message" rows="5" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-warning"></span>
            </div>
            <div class="form-group">
                <button type="submit" id="button" class="btn"><i class="fas fa-envelope fa-1x"></i> Send Message</button>
                <div class="text-success">@ViewBag.UserMessage</div>
            </div>
        </form>
    </div>
</div>