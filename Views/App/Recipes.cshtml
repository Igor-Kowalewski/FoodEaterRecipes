@model IEnumerable<IngredientCategory>
@{
    ViewData["Title"] = "Recipes";
}
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


<h1>All ingredients!</h1>
<h4>@Model.Count()</h4>

<ol>
    @foreach (var r in Model)
    {
        <li>@r.Name</li>
    }
</ol>


<div class="recipe-info">
    <img src="~/src/BlueberryOmlette.jpg" />
    <h3>Blueberry Omlette</h3>
    <ul class="recipe-props">
        <li>Daily Average Requirements per portion</li>
        <li>400 kcal</li>
        <li>Carbohydrates: 40%</li>
        <li>Proteins: 32%</li>
        <li>Fiber: 51%</li>
        <li>Fats LA (Omega-6): 21%</li>
        <li>Fats ALA (Omega-3): 20%</li>
    </ul>
    <button class="btn btn-dark">See details!</button>
</div>
